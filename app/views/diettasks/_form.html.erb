<div class="row">
  <div class="col-6">
<%= form_with(model: diettask, local: true) do |f| %>
  <% if diettask.errors.any? %>
    <div id="error_explanation" class="alert alert-warning">
      <ul class="mb-0">
        <% diettask.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :limit_date, '期限日' %>
    <%= f.date_select :limit_date, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :ステータス %>
    <%= f.select(:status, [['未完了', '未完了'], ['達成！', '達成！']]) %>
  </div>

  <%= f.submit '作成', class: 'btn btn-primary' %>
<% end %>
  </div>
</div>