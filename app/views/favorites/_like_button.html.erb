<% if current_user.like?(diettask) %>
    <%= form_with(model: current_user.favorites.find_by(diettask_id: diettask.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :diettask_id, diettask.id %>
      <%= f.submit 'Unlike', class: 'btn btn-warning btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :diettask_id, diettask.id %>
      <%= f.submit 'Like', class: 'btn btn-info btn-sm' %>
  <% end %>
<% end %>