<% if logged_in? %>
<div class="row">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 50 }) %>" alt="">
      </div>
    </div>
  </div>
  <div class="col-sm-12">
    <ul class="nav nav-tabs nav-justified mt-5 mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Diettasks  <span class="badge badge-secondary"></span></a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followings</a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followers</a></li>
    </ul>
    <%= render 'diettasks/diettasks', diettasks: @diettasks %>
  </div>
</div>
<% end %>
